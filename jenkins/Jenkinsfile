pipeline {
agent any
stages{
    stage ('Checkout'){
          steps{
            git branch: 'main',
            url: 'https://github.com/jayantidani/aws-devops-production-project.git'
               }

         }
    stage ('Build Docker Image'){
          steps{
            sh 'docker build -t devops-app ./docker'
               }
        
         }
    stage ('Run the Container'){
          steps{
            sh 'docker run -d -p 5000:5000 devops-app'
               }
         }
      }
}